<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:baseMessagesInterface="edu.stanford.bmir.protege.web.client.Messages"
             ui:generateFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <g:HTMLPanel addStyleNames="{wp.style.formMain}">

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label><ui:msg>Current password</ui:msg></g:Label>
            <g:PasswordTextBox ui:field="oldPasswordField" visibleLength="60"/>
        </g:HTMLPanel>


        <div style="height: 20px;"/>

        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label><ui:msg>New password</ui:msg></g:Label>
            <g:PasswordTextBox ui:field="newPasswordField" visibleLength="60"/>
        </g:HTMLPanel>


        <g:HTMLPanel addStyleNames="{wp.style.formGroup}">
            <g:Label><ui:msg>Confirm new password</ui:msg></g:Label>
            <g:PasswordTextBox ui:field="confirmNewPasswordField" visibleLength="60"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>
