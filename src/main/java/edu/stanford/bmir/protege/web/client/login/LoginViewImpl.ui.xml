<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:baseMessagesInterface="edu.stanford.bmir.protege.web.client.Messages"
             ui:generateFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>

        @external .wp-login-logo;

        .main {
            overflow: auto;
        }

        .center {
            margin-top: 50px;
            margin-left: auto;
            margin-right: auto;
            /*width: 400px;*/
            padding: 0;
            overflow: auto;
            bottom: 0;
            top: 0;
            color: #606060;
        }

        .centerPanel {
            max-width: 250px;
            display: flex;
            flex-direction: column;
        }

        .message {
            width: 250px;
            margin-left: auto;
            margin-right: auto;
            padding-top: 10px;
            padding-bottom: 15px;
            font-size: 18px;
            text-align: center;
        }

        .bottomBar {
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        .forgotPasswordButton {
            color: blue;
            text-decoration: underline;
            padding-right: 0;
        }

        .wp-login-logo {
            margin-left: auto;
            margin-right: auto;
        }

        .signup {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-end;
        }

        .signup > * {
            margin: 3px;
        }

        .signin {
            margin: 20px 0;
        }

        .info {
            margin-top: 50px;
            width: 800px;
            margin-right: auto;
            margin-left: auto;
            color: #c0c0c0;
            text-align: center;
            font-size: 10px;
        }

        .info a {
            color: #a0a0a0;
        }
    </ui:style>


    <g:HTMLPanel addStyleNames="{style.main} {wp.login.login}">
        <g:HTMLPanel addStyleNames="{style.signup}">
          <g:Button text="{msg.signUpForAccount}" ui:field="signUpForAccountButton"
                    addStyleNames="{wp.buttons.button} {wp.buttons.pageButton} {wp.buttons.alternateButton}"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.center}">
            <g:HTMLPanel addStyleNames="{style.wp-login-logo} {wp.login.loginLogo}"/>
            <g:HTMLPanel addStyleNames="{style.message}">
                <g:Label text="{msg.signInToContinue}"/>
            </g:HTMLPanel>

            <g:FormPanel>
              <g:HTMLPanel addStyleNames="{wp.settings.inner} {style.centerPanel}">
                <g:Label text="{msg.userName}"/>
                <g:TextBox ui:field="userNameField" visibleLength="30"/>
                <g:Label text="{msg.password}"/>
                <g:PasswordTextBox ui:field="passwordField" visibleLength="30"/>
                <g:SubmitButton ui:field="signInButton" text="{msg.signIn}"
                          addStyleNames="{wp.buttons.button} {wp.buttons.pageButton} {wp.buttons.primaryButton} {style.signin}"/>
                <g:HTMLPanel addStyleNames="{style.bottomBar}">
                    <g:Anchor text="{msg.forgotUserNameOrPassword}" ui:field="forgotPasswordButton"
                              addStyleNames="{style.forgotPasswordButton}"/>
                </g:HTMLPanel>
              </g:HTMLPanel>
            </g:FormPanel>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.info}">
            <p>
              <ui:msg>
                WebProtege is developed by the Protege team in the Biomedical Informatics
                Research Group (BMIR) at Stanford University, California, USA.
              </ui:msg>
            </p>


            <p>
              <ui:msg>
                The work is supported by Grant GM121724 from the National Institute
                of General Medical Sciences at the United States National Institutes
                of Health.
              </ui:msg>
            </p>
            <p>
              <g:Anchor href="html/privacy.html" target="_blank">
                <ui:msg>Privacy Policy</ui:msg>
                <ui:attribute name="href" description="URL of the Privacy Policy document"/>
              </g:Anchor>.
              <g:Anchor href="html/termsofuse.html" target="_blank">
                <ui:msg>Terms of Use</ui:msg>
                <ui:attribute name="href" description="URL of the Terms of Use document"/>
              </g:Anchor>
            </p>


        </g:HTMLPanel>


    </g:HTMLPanel>

</ui:UiBinder>
